<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

   
    <!-- Frame style: rounded corners, light-gray background, subtle border -->
    <Style x:Key="InputFrameStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
        <Setter Property="CornerRadius"    Value="8" />
        <Setter Property="HasShadow"       Value="True" />
        <Setter Property="BorderColor"     Value="{StaticResource Gray300}" />
        <Setter Property="Padding"         Value="12" />
        <Setter Property="Margin"          Value="0,4,0,4" />
    </Style>

    <!-- Entry style: inside a Frame, no default border, uses Gray900 for text -->
    <Style x:Key="EntryStyle" TargetType="Entry">
        <Setter Property="FontSize"        Value="16" />
        <Setter Property="TextColor"       Value="{StaticResource Gray900}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Margin"          Value="0" />
    </Style>

    <!-- Editor style: for multi-line text (description) -->
    <Style x:Key="EditorStyle" TargetType="Editor">
        <Setter Property="FontSize"        Value="16" />
        <Setter Property="TextColor"       Value="{StaticResource Gray900}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Margin"          Value="0" />
    </Style>

    <!-- Picker style: dropdown, same look as Entry -->
    <Style x:Key="PickerStyle" TargetType="Picker">
        <Setter Property="FontSize"        Value="16" />
        <Setter Property="TextColor"       Value="{StaticResource Gray900}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Margin"          Value="0" />
    </Style>

    <!-- Label style: page headers or section headings -->
    <Style x:Key="HeaderLabelStyle" TargetType="Label">
        <Setter Property="FontSize"        Value="28" />
        <Setter Property="FontAttributes"  Value="Bold" />
        <Setter Property="TextColor"       Value="{StaticResource Blue100Accent}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Margin"          Value="0,12,0,24" />
    </Style>

    <!-- Button style: primary action button -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Blue100Accent}" />
        <Setter Property="TextColor"       Value="{StaticResource White}" />
        <Setter Property="FontSize"        Value="18" />
        <Setter Property="CornerRadius"    Value="8" />
        <Setter Property="Padding"         Value="12" />
        <Setter Property="Margin"          Value="0,16,0,0" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

</ResourceDictionary>
